<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginActivity"
     android:background="@drawable/list_grad">
    <!-- android:background="#FFF"-->

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="303dp"
        android:layout_height="76dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tcfac" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/username"
        android:layout_width="269dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:focusable="auto"
        android:focusableInTouchMode="false"
        android:forceDarkAllowed="true"
        android:textColor="#000000"
        android:textColorHint="#000000"
        app:errorEnabled="true"
        app:errorTextAppearance="@style/AppTheme.TextErrorAparence"
        app:hintTextColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.688"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:startIconTint="#0E0000">

        <com.google.android.material.textfield.TextInputEditText
            style="#000000"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:backgroundTint="#000000"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textColorLink="#FFFFFF"
            android:textSize="24sp"
            android:visibility="visible"
            tools:visibility="visible"
            android:text="karina.fonseca@tqatch.com" />


    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password"
        android:layout_width="269dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#000000"
        android:forceDarkAllowed="true"
        android:textColor="#000000"
        android:textColorHint="#000000"
        app:errorEnabled="true"
        app:hintEnabled="true"
        app:hintTextColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.688"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username"
        app:startIconTint="#0E0000"
        app:errorTextAppearance="@style/AppTheme.TextErrorAparence"
        >


        <com.google.android.material.textfield.TextInputEditText
            style="#000000"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:backgroundTint="#000000"
            android:hint="Password"
            android:inputType="textPassword"

            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textColorLink="#FFFFFF"
            android:textSize="24sp"
            android:visibility="visible"
            tools:visibility="visible"
            android:text="pass"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/company"
        android:layout_width="269dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#000000"
        android:forceDarkAllowed="true"
        android:textColor="#000000"
        android:textColorHint="#000000"
        app:hintTextColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.688"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:startIconTint="#0E0000"
        app:errorTextAppearance="@style/AppTheme.TextErrorAparence"
        >

        <com.google.android.material.textfield.TextInputEditText
            style="#000000"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:backgroundTint="#000000"
            android:hint="Company"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textColorLink="#FFFFFF"
            android:textSize="24sp"
            android:visibility="visible"
            tools:visibility="visible"
            android:text="pass"/>

    </com.google.android.material.textfield.TextInputLayout>


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="328dp"
        app:layout_constraintEnd_toStartOf="@+id/password"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/password" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:layout_marginTop="188dp"
        app:layout_constraintEnd_toStartOf="@+id/username"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/username" />


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="108dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:srcCompat="@drawable/company" />

    <Button
        android:id="@+id/login"
        android:layout_width="353dp"
        android:layout_height="81dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/button_rounded"
        android:onClick="onClickLogin"
        android:textColor="@android:color/background_light"
        android:textFontWeight="30"
        android:text="Sing In"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/company" />

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="64dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/password"
        app:layout_constraintStart_toStartOf="@+id/password"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

</androidx.constraintlayout.widget.ConstraintLayout>